<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.objectFactory" value="spring"/>
	<package name="exam" namespace="/stu" extends="struts-default">
		<interceptors>
			<interceptor name="loginInterceptor" class="stuExamInterceptor"></interceptor>
			<interceptor-stack name="examUserStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="loginInterceptor">
					<param name="excludeMethods">login,getAnthCode,updateInfo,getSubjectInfo</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="examUserStack"></default-interceptor-ref>
		<global-results>
			<result name="doError" type="dispatcher">/pages/common/Error.jsp</result>
			<result name="doLogin" type="dispatcher">/index.jsp</result>
		</global-results>
		<action name="stuExam_*" class="userExamAction" method="{1}">
			<result name="baseInfoPage" type="dispatcher">/pages/stu/home.jsp</result>
			<result name="resultScan" type="dispatcher">/pages/stu/ResultScan.jsp</result>
			<result name="questionScan" type="dispatcher">/pages/stu/questionResultScan.jsp</result>
			<result name="lxExam" type="dispatcher">/pages/stu/LxExam.jsp</result>
		</action>
	</package>
	<package name="teacherAdmin" namespace="/tea" extends="struts-default">
		<action name="tea_*" method="{1}" class="teacherAction">
			<result name="uploadQuestion" type="dispatcher">/pages/tea/addQuestion.jsp</result>
		</action>
	</package>
</struts>
